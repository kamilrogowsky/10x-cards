---
import Layout from "../layouts/Layout.astro";
import { LoginForm } from "../components/LoginForm";
import { ErrorBoundary } from "../components/ErrorBoundary";
---

<Layout
  title="Zaloguj się - 10xCards"
  description="Zaloguj się do 10xCards, aby tworzyć fiszki przy użyciu sztucznej inteligencji"
>
  <div
    class="min-h-screen bg-gradient-to-b from-background via-background to-muted/20 flex items-center justify-center p-4"
  >
    <div class="w-full max-w-md">
      <!-- Back to Home Link -->
      <div class="mb-8 text-center">
        <a
          href="/"
          class="inline-flex items-center gap-2 text-muted-foreground hover:text-foreground transition-colors duration-200 font-medium"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"
            ></path>
          </svg>
          Powrót do strony głównej
        </a>
      </div>

      <!-- Login Form -->
      <ErrorBoundary client:load>
        <LoginForm client:load />
      </ErrorBoundary>
    </div>
  </div>
</Layout>

<style>
  /* Custom animations */
  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-slide-up {
    animation: slide-up 0.5s ease-out;
  }
</style>
